{
  "name": "hyperclast",
  "private": true,
  "version": "1.3.0",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --sourcemap",
    "build": "vite build",
    "preview": "vite preview",
    "format": "prettier --write .",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:load-time": "playwright test tests/e2e/note-load-time.spec.js --headed",
    "test:websocket": "playwright test tests/e2e/websocket-stability.spec.js",
    "test:websocket:headed": "playwright test tests/e2e/websocket-stability.spec.js --headed",
    "test:collab": "playwright test tests/e2e/page-load-collab.spec.js",
    "test:collab:headed": "playwright test tests/e2e/page-load-collab.spec.js --headed",
    "test:all": "npm test && npm run test:e2e"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "happy-dom": "^20.0.10",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.3.3",
    "svelte": "^5.16.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.37.2",
    "blueimp-md5": "^2.19.0",
    "codemirror": "^6.0.1",
    "lucide-static": "^0.518.0",
    "y-codemirror.next": "^0.3.5",
    "y-protocols": "^1.0.6",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.27"
  },
  "lint-staged": {
    "**/*.{js,json,css,html,svelte}": "prettier --write"
  }
}
